<odoo>
    <record id="view_pos_giftcard_tree" model="ir.ui.view">
        <field name="name">pos.giftcard.tree</field>
        <field name="model">pos.giftcard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="balance"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_giftcard_form" model="ir.ui.view">
        <field name="name">pos.giftcard.form</field>
        <field name="model">pos.giftcard</field>
        <field name="arch" type="xml">
            <form>
                <sheet><group>
                    <field name="name"/>
                    <field name="balance"/>
                    <field name="active"/>
                </group></sheet>
            </form>
        </field>
    </record>
</odoo>
