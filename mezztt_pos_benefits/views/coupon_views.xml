<odoo>
    <record id="view_pos_coupon_tree" model="ir.ui.view">
        <field name="name">pos.coupon.tree</field>
        <field name="model">pos.coupon</field>
        <field name="arch" type="xml">
            <tree string="Cupones">
                <field name="code"/>
                <field name="discount_type"/>
                <field name="discount_value"/>
                <field name="expiration_date"/>
                <field name="max_uses"/>
                <field name="used_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_coupon_form" model="ir.ui.view">
        <field name="name">pos.coupon.form</field>
        <field name="model">pos.coupon</field>
        <field name="arch" type="xml">
            <form string="CupÃ³n">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="discount_type"/>
                            <field name="discount_value"/>
                            <field name="expiration_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="max_uses"/>
                            <field name="used_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="notes" colspan="2"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_coupon_search" model="ir.ui.view">
        <field name="name">pos.coupon.search</field>
        <field name="model">pos.coupon</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <filter name="active_state" string="Activos" domain="[('state','=','active')]"/>
                <filter name="expired_state" string="Vencidos" domain="[('state','=','expired')]"/>
            </search>
        </field>
    </record>

    <record id="action_pos_coupon" model="ir.actions.act_window">
        <field name="name">Cupones</field>
        <field name="res_model">pos.coupon</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_pos_coupon_tree"/>
        <field name="search_view_id" ref="view_pos_coupon_search"/>
    </record>
</odoo>
