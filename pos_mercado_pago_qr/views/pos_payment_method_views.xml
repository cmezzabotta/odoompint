<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_mercado_pago_qr" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.mercado_pago_qr</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="mpqr_use_qr" invisible="use_payment_terminal != 'mercado_pago_qr'"/>
                <group invisible="use_payment_terminal != 'mercado_pago_qr'">
                    <field name="mpqr_access_token" placeholder="APP_USR-..." required="1"/>
                    <field name="mpqr_collector_id" placeholder="123456789" required="1"/>
                    <field name="mpqr_pos_external_id" placeholder="POS_0001" required="1"/>
                    <field name="mpqr_store_id"/>
                    <field name="mpqr_order_validity"/>
                    <field name="mpqr_receipt_message" widget="text"/>
                    <field name="mpqr_notification_secret"/>
                    <field name="mpqr_notification_url" readonly="1"/>
                    <field name="mpqr_last_error" readonly="1" widget="text"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
