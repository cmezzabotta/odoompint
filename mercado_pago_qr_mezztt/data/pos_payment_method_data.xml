<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--
        Método de pago preconfigurado para el POS.  Al instalar el módulo se
        crea automáticamente y queda disponible para ser activado en la sesión.
    -->
    <record id="mercado_pago_qr_mezztt_terminal" model="pos.payment.terminal">
        <field name="name">mercado_pago_qr_mezztt</field>
        <field name="technical_name">mercado_pago_qr_mezztt</field>
    </record>

    <record id="pos_payment_method_mercado_pago_qr_mezztt" model="pos.payment.method">
        <field name="name">Mercado Pago QR</field>
        <field name="payment_method_type">qr_code</field>
        <field name="use_payment_terminal">True</field>
        <field name="payment_terminal_id" ref="mercado_pago_qr_mezztt_terminal"/>
    </record>
</odoo>
