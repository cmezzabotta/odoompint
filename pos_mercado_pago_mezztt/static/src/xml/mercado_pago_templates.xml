<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="MercadoPagoMezzttPopup" owl="1">
        <div class="mp-mezztt-popup">
            <t t-if="props.qrImage">
                <img t-att-src="props.qrImage" class="mp-mezztt-qr" alt="QR"/>
            </t>
            <t t-else="">
                <div class="mp-mezztt-qr-data" t-esc="props.qrData"/>
            </t>
            <div class="mp-mezztt-amount">
                <t t-esc="props.currency"/> <t t-esc="props.amount"/>
            </div>
            <div class="mp-mezztt-help">
                <t t-raw="props.body"/>
            </div>
        </div>
    </t>
</templates>
