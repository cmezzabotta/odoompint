<templates xml:space="preserve">
  <t t-name="pos_mercado_pago_mezztt.MpQrPopup" owl="1">
    <div class="popup popup-lg mp-qr-popup">
      <div class="popup-title"><t t-esc="props.title"/></div>
      <div class="popup-content">
        <div class="mp-qr-popup__amount" t-if="props.amount">
          <t t-esc="props.currency or ''"/> <t t-esc="props.amount.toFixed ? props.amount.toFixed(2) : props.amount"/>
        </div>
        <div class="mp-qr-popup__qr">
          <t t-if="props.qr_base64"><img t-att-src="'data:image/png;base64,'+props.qr_base64" width="260" height="260"/></t>
          <t t-elif="props.qr_url"><img t-att-src="props.qr_url" width="260" height="260"/></t>
          <t t-else=""><div class="mp-qr-popup__qr--missing">No se pudo generar el QR</div></t>
        </div>
        <div class="mp-qr-popup__status">
          <span class="mp-qr-popup__message"><t t-esc="state.message"/></span>
          <span class="mp-qr-popup__timer">(<t t-esc="state.seconds"/>s)</span>
        </div>
      </div>
      <div class="footer">
        <button class="button cancel" t-on-click="cancel">Cancelar</button>
      </div>
    </div>
  </t>
</templates>
