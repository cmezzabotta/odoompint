<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_mezztt" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.mercado_pago_mezztt</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="mp_mezztt_provider_id" invisible="use_payment_terminal != 'mercado_pago_qr_mezztt'"/>
                <field name="mp_mezztt_last_reference" readonly="1" invisible="use_payment_terminal != 'mercado_pago_qr_mezztt'"/>
                <field name="mp_mezztt_last_error" readonly="1" invisible="use_payment_terminal != 'mercado_pago_qr_mezztt'"/>
            </xpath>
        </field>
    </record>
</odoo>
