<odoo>
  <record id="view_res_config_settings_pos_mezztt" model="ir.ui.view">
    <field name="name">res.config.settings.pos.mezztt</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.view_res_config_settings"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='settings']" position="inside">
        <div class="app_settings_block" data-string="POS Mercado Pago QR" string="POS Mercado Pago QR (_mezztt)">
          <h2>Mercado Pago QR (_mezztt)</h2>
          <group>
            <field name="mp_access_token" password="True"/>
            <field name="mp_public_key"/>
            <field name="mp_sandbox"/>
            <field name="mp_collector_id"/>
            <field name="mp_pos_id"/>
            <field name="mp_store_id"/>
            <label string="Configura las credenciales de Mercado Pago. Todas las llamadas a MP se hacen server-side."/>
          </group>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
