
<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="MpQrPopup" owl="1">
        <div class="mp-qr-popup">
            <div class="checkout-box">
                <div class="summary">
                    <h2>Checkout</h2>
                    <p>Revisión de compra y pago</p>
                    <div class="products">
                        <p>Producto A - $499.00</p>
                        <p>Servicio B - 2 × $120.50</p>
                    </div>
                    <h3>Total: $740,00</h3>
                </div>
                <div class="payment-box">
                    <p><strong>Pagar con MercadoPago</strong><br/>Pago con QR</p>
                    <button class="pay-btn" t-on-click="generateQr">Pagar</button>
                    <div class="qr-placeholder" t-if="qrData">
                        <img t-att-src="qrData" alt="QR Code"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
