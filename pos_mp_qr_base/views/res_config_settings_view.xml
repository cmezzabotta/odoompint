<odoo>
    <record id="res_config_settings_view_form_mp_qr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.mp.qr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[hasclass('app_settings_block')][1]" position="inside">
                <div class="app_settings_block" data-string="Mercado Pago QR" string="Mercado Pago QR">
                    <h2>Mercado Pago QR</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="mercadopago_access_token" password="True" placeholder="APP_USR-..."/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mercadopago_access_token" string="Access Token"/>
                                <div class="text-muted">Token productivo de Mercado Pago utilizado para crear preferencias y consultar pagos.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="mercadopago_timeout_seconds"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mercadopago_timeout_seconds" string="Tiempo máximo de espera"/>
                                <div class="text-muted">Segundos máximos de polling antes de cancelar la solicitud.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
