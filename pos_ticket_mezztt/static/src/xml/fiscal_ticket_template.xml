
<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="pos_fiscal_afip_heladeria.fiscal_ticket_template" t-inherit="point_of_sale.Receipt" t-inherit-mode="extension">
    <xpath expr="//div[@class='pos-receipt']" position="inside">
      <div class="fiscal-ticket-info">
        <p><strong>CAE:</strong> <t t-esc="receipt.cae"/></p>
        <p><strong>Vto CAE:</strong> <t t-esc="receipt.cae_due_date"/></p>
        <p><strong>CUIT:</strong> <t t-esc="receipt.company_cuit"/></p>
        <p><strong>Punto de Venta:</strong> <t t-esc="receipt.pos_branch"/></p>
        <div class="qr-fiscal">
          <img t-att-src="'data:image/png;base64,%s' % receipt.qr_afip_base64" alt="QR AFIP"/>
        </div>
      </div>
    </xpath>
  </t>
</templates>
