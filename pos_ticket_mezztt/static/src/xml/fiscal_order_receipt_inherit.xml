<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_ticket_mezztt.FiscalAwareOrderReceipt" owl="1">
        <t t-if="props.order and props.order.is_to_invoice and props.order.is_to_invoice()">
            <t t-set="receipt" t-value="props.receipt"/>
            <t t-set="order" t-value="props.order"/>
            <t t-call="pos_ticket_mezztt.fiscal_ticket_template"/>
        </t>
        <t t-else="">
            <t t-call="point_of_sale.OrderReceipt"/>
        </t>
    </t>
</templates>
